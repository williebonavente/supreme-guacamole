@model IEnumerable<TodoApplicationTemp.Models.TodoItem>

@{
    ViewData["Title"] = "Todo Items";
}

<h1>Todo Items</h1>

<!-- Filter Form -->

@using (Html.BeginForm("Index", "TodoItems", FormMethod.Get))
{
    <p class="">
        Category:
        @Html.DropDownList("category", new SelectList(ViewBag.Categories, ViewBag.SelectedCategory), "All")

        Priority:
        <select name="priority">
            <option value="">All</option>
            <option value="1">1 (Low)</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5 (High)</option>
        </select>
        
        Sort by:
        <select name="sortOrder">
            <option value="">Default</option>
            <option value="priority_asc">Ascending</option>
            <option value="priority_desc">Descending</option>
        </select>
        <input type="submit" value="Filter" class="btn btn-primary" />
    </p>
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsComplete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                Actions
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsComplete)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>

       
            <td>
                <a asp-action="Edit" class="btn btn-success"asp-route-id="@item.Id">Edit</a> 
                <a asp-action="Details" class="btn btn-primary"asp-route-id="@item.Id">Details</a> 
                <a asp-action="Delete" class="btn btn-danger"asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
